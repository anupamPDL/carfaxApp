<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_card"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imageView_car_main"
                android:background="@color/photo_holder_bg"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textView_carName_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_car_main"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/textView_carName_main"
                android:id="@+id/textView_price_and_miles_main"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_address_main"
                android:layout_below="@id/textView_price_and_miles_main"
                android:layout_margin="10dp"
                android:textColor="@color/black"/>

            <View
                android:layout_below="@id/textView_address_main"
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/divider"
                android:id="@+id/btn_dial_main"
               android:layout_margin="10dp"
                android:textColor="@color/purple_500"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/call_dealer"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>